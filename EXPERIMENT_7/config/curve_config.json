{
  "image": {
    "height": 128,
    "width": 128
  },
  "bezier": {
    "margin": 15,
    "n_samples": 1000,
    "min_distance": 45.0,
    "control_point_spread": 0.4,
    "control_point_factor": 0.6
  },
  "branches": {
    "num_branches_range": [1, 3],
    "start_range": [0.2, 0.8],
    "thickness_factor": 0.8
  },
  "noise": {
    "num_blobs_range": [2, 6],
    "blob_sigma_range": [3.0, 10.0],
    "blob_intensity_range": [0.1, 0.3],
    "noise_level_range": [0.05, 0.2],
    "gaussian_blur_prob": 0.5,
    "gaussian_blur_sigma_range": [0.5, 1.2]
  },
  "tissue_noise": {
    "sigma_range": [2.0, 5.0],
    "intensity_range": [0.15, 0.35]
  },
  "training_stages": [
    {
      "stage_id": 1,
      "name": "Stage1_Tracking_Basics",
      "episodes": 5000,
      "learning_rate": 1e-4,
      "curve_generation": {
        "width_range": [4, 6],
        "curvature_range": [0.0, 0.2],
        "min_intensity": 0.8,
        "max_intensity": 1.0,
        "branches": false,
        "noise_prob": 0.0
      },
      "training": { "strict_stop": false, "mixed_start": false }
    },
    {
      "stage_id": 2,
      "name": "Stage2_Geometric_Complexity",
      "episodes": 7000,
      "learning_rate": 1e-4,
      "curve_generation": {
        "width_range": [3, 5],
        "curvature_range": [0.3, 1.0],
        "min_intensity": 0.6,
        "max_intensity": 1.0,
        "branches": false,
        "noise_prob": 0.2
      },
      "training": { "strict_stop": false, "mixed_start": true }
    },
    {
      "stage_id": 3,
      "name": "Stage3_Topological_Discovery",
      "episodes": 12000,
      "learning_rate": 5e-5,
      "curve_generation": {
        "width_range": [3, 5],
        "curvature_range": [0.2, 0.8],
        "min_intensity": 0.5,
        "max_intensity": 0.9,
        "branches": true,
        "num_branches_range": [1, 1],
        "thickness_factor": 0.9,
        "noise_prob": 0.3
      },
      "training": { 
        "strict_stop": true, 
        "mixed_start": true,
        "branch_reward_weight": 1.0 
      }
    },
    {
      "stage_id": 4,
      "name": "Stage4_Ambiguity_Memory",
      "episodes": 15000,
      "learning_rate": 5e-5,
      "curve_generation": {
        "width_range": [2, 5],
        "curvature_range": [0.1, 1.2],
        "min_intensity": 0.3,
        "max_intensity": 0.8,
        "branches": true,
        "num_branches_range": [1, 2],
        "gap_prob": 0.4,
        "noise_prob": 0.6,
        "allow_self_cross": true,
        "self_cross_prob": 0.3
      },
      "training": { "strict_stop": true, "mixed_start": true, "tissue": true }
    },
    {
      "stage_id": 5,
      "name": "Stage5_Zero_Shot_Robustness",
      "episodes": 30000,
      "learning_rate": 2e-5,
      "curve_generation": {
        "width_range": [1, 7],
        "width_variation": "narrow_to_wide",
        "intensity_variation": "bright_to_dim",
        "curvature_range": [0.0, 1.5],
        "branches": true,
        "num_branches_range": [1, 3],
        "gap_prob": 0.6,
        "noise_prob": 0.8,
        "invert_prob": 0.4,
        "background_intensity_range": [0.0, 0.3]
      },
      "training": { 
        "strict_stop": true, 
        "tissue": true, 
        "mixed_start": true,
        "hard_negatives": true 
      }
    }
  ]
}